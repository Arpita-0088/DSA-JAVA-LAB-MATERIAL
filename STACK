import java.util.*;
public class Main{
    public int maxSize;
    int[] arr;
    public int tos=-1;
    public Main(int maxSize)
    {
        this.maxSize=maxSize;
          arr = new int[maxSize];
    }
    public void push(int data){
        if(tos==maxSize-1){
            System.out.println("THE STACK IS FULL");
            return;
        }
        else{
            tos++;
            arr[tos]=data;
            System.out.println("Pushed ELEMENT:"+ data);
        }
    }
    public void pop(){
        if(tos==-1){
            System.out.println("THE STACK IS EMPTY");
            return;
        }
        else{
            int poped=arr[tos];
            tos--;
            System.out.println("Poped ELEMENT:"+ poped);
        }
    }
    public void peep(){
        if(tos==-1){
            System.out.println("EMPTY STACK");
            return;
        }
        else{
            int peep=arr[tos];
            System.out.println("Peeped ELEMENT:"+ peep);
        }
    }
public static void main(String [] args){
    Scanner sc = new Scanner(System.in);
    System.out.println("ENTER THE MAX VALUE OF YOUR ARRAY");
    int maxSize=sc.nextInt();
    Main a=new Main(maxSize);
    System.out.println("ENTER 1 FOR PUSH, 2 FOR POP, 3 FOR PEEP,4 FOR EXIT");
    int choice=sc.nextInt();
    switch (choice){
        case 1: 
            System.out.println("ENTER THE ELEMENTS TO PUSH IT");
            for(int i =0; i<maxSize; i++) {
            System.out.print("element "+ (i+1) +":");
            int data=sc.nextInt();
            a.push(data);
            }
       break;
        case 2: 
            a.pop();
            break; 
        case 3:
            a.peep();
            break;
        case 4:
            System.out.println("YOU ARE EXITED FROM THE CODE");
            break;
        default:
           System.out.println("INVALID CHOICE");
     }
     sc.close();
  }  
}

